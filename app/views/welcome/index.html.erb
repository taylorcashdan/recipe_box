<div class="page-header"><h1>Tech Talent Recipes <small>A Totally Original Idea</small></h1></div>

<% if user_signed_in? %>

<h1>My Recipes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Photo</th>
      <th>Ingredients</th>
      <th>Steps</th>
      <!-- <th>Prep time</th>
      <th>Cook time</th> -->
      <th>Total Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.name, recipe %></td>
        <td><%= recipe.category %></td>
        <td><%= image_tag(recipe.picture, :width => 200) %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= recipe.steps %></td>
        <!-- <td><%= recipe.prep_time %></td>
        <td><%= recipe.cook_time %></td> -->
        <td><%= recipe.minutes_total %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>



<div class="row">
	<% current_user.recipes.each do |recipe| %>
	<div class="col-md-8">
		<div class="panel panel-defualt">
			<div class="panel-body">
				<p><%= link_to recipe.name, recipe %></p>
			</div>
		</div>
	</div>
	<% end %>
</div>




<% else %>
	<div class="container">

		<div class="col-md-6">

		<%= render 'sign_in' %>

		
		<div class="col-md-6">
		
		<%= render 'sign_up' %>

		</div>

	</div>

<% end %>